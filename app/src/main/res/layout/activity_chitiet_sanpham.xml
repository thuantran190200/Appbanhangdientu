<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChitietSanpham">

    <ImageView
        android:id="@+id/btn_back_ctsp"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@color/yellow"/>
    <ImageView
        android:id="@+id/load_hinh"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/tv_samsung"/>
    <TextView
        android:id="@+id/load_tensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/load_hinh"/>
    <TextView
        android:id="@+id/txt_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/load_tensp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Giá: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/load_giasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/load_tensp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/txt_gia"
        android:text="Giá sản phẩm"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/red"/>
    <TextView
        android:id="@+id/txt_kho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Kho: "
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txt_gia"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/load_soluongsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/load_giasp"
        android:layout_toRightOf="@+id/txt_kho"
        android:text="Số lượng trong kho"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/txt_mota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_kho"
        android:text="Mô tả:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/load_mota"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_mota"
        android:text="Nội dung"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/btn_addgiohang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/load_mota"
        android:text="Thêm vào giỏ hàng"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btn_muangay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_addgiohang"
        android:backgroundTint="@color/OrangeRed"
        android:layout_marginLeft="10dp"
        android:text="Mua ngay"/>



</RelativeLayout>