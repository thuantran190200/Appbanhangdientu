<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doimatkhau">
    <ImageButton
        android:id="@+id/back_thoat"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/yellow"
        android:src="@drawable/ic_arrow_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:textSize="20dp"
        android:fontFamily="@font/bungee"
        android:textColor="@color/black"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        android:text="Tài khoản:"/>

    <TextView
        android:id="@+id/show_tendn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tên đăng nhập"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="115dp"
        android:textSize="18dp"/>
    <EditText
        android:id="@+id/mk_cu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_tendn"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:maxLength="16"
        android:hint="Nhập mật khẩu cũ"/>

    <EditText
        android:id="@+id/mk_moi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mk_cu"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:maxLength="16"
        android:hint="Mật khẩu mới (tối đa 12 - 16 ký tự)"/>

    <EditText
        android:id="@+id/mk_moi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mk_moi"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:maxLength="16"
        android:hint="Nhập lại mật khẩu"/>
    <Button
        android:id="@+id/btn_doimktk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mk_moi1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:text="Thay đổi mật khẩu"
        android:backgroundTint="@color/black"/>





</RelativeLayout>