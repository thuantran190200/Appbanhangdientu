<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_thongtin_Khachhang">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/SpringGreen"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_user"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="160dp"/>
        <TextView
            android:id="@+id/show_hoten1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/logo_user"
            android:layout_marginTop="5dp"
            android:text="Họ và tên"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/bungee"/>

        <TextView
            android:id="@+id/show_sdt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/show_hoten1"
            android:gravity="center"
            android:textSize="20dp"
            android:text="01234456789"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SpringGreen"
        android:layout_marginTop="240dp">

        <Button
            android:id="@+id/btn_ttcn"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="thông tin cá nhân                                >"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/btn_doimk"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_below="@+id/btn_ttcn"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:text="Đổi mật khẩu                                          >"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_dangxuat_kh"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="110dp"
        android:backgroundTint="@color/red"
        android:text="Đăng xuất"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/bungee"/>

</FrameLayout>