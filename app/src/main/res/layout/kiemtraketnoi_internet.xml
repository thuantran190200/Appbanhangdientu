<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/anh_dong"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/nowifi"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/no_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anh_dong"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Mất kết nối"
        android:textColor="@color/Black"
        android:fontFamily="@font/bungee"
        android:letterSpacing="0.1"/>
    <TextView
        android:id="@+id/giaithich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/no_wifi"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Kết nối mạng thất bại. Vui lòng kiểm tra lại!!!"
        android:textColor="@color/Black"
        android:textSize="16dp"
        android:paddingRight="35dp"
        android:paddingLeft="35dp"
        android:letterSpacing="0.1"/>
    <TextView
        android:id="@+id/btn_thulai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/giaithich"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@color/SkyBlue"
        android:elevation="6dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:text="Thử lại"
        android:textAllCaps="true"
        android:textColor="@color/Black"
        android:textSize="15dp"
        android:fontFamily="@font/bungee"/>
</RelativeLayout>